<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.augusta.dev.personalize.AppSettingsActivity">

    <TextView
        android:id="@+id/title_noti_settings"
        android:layout_width="wrap_content"
        android:text="Notification Settings"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_view3"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/title_noti_settings"
        android:layout_marginBottom="5dp"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:text="Notification"
        android:layout_below="@+id/title_view3"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/title_menu_settings"
        android:layout_width="wrap_content"
        android:text="Menu Settings"
        android:layout_below="@+id/notification"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_view1"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/title_menu_settings"
        android:layout_marginBottom="5dp"
        android:layout_height="0.5dp"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/personalize"
        android:layout_width="match_parent"
        android:text="Personalize"
        android:layout_below="@+id/title_view1"
        android:layout_height="40dp" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/location_mode"
        android:layout_width="match_parent"
        android:text="Location Mode"
        android:layout_below="@+id/personalize"
        android:layout_height="40dp" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/rouse_up"
        android:layout_width="match_parent"
        android:text="Rouse Up"
        android:layout_below="@+id/location_mode"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/title_time_settings"
        android:layout_width="wrap_content"
        android:text="Time Settings"
        android:layout_below="@+id/rouse_up"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/title_view2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/title_time_settings"
        android:layout_marginBottom="5dp"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/title_view2"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Background location update"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center|left"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/minus"
            android:layout_width="45dp"
            android:text="-"
            android:textColor="#ffffff"
            android:background="@drawable/ripple_effect"
            android:layout_toLeftOf="@+id/back_loc_time_min"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/back_loc_time_min"
            android:layout_width="45dp"
            android:text="1"
            android:gravity="center"
            android:textColor="15dp"
            android:layout_toLeftOf="@+id/plus"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="45dp"
            android:background="@drawable/ripple_effect"
            android:text="+"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_height="45dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/versionS"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="v1.01"
        android:layout_height="wrap_content" />
</RelativeLayout>
